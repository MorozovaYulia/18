#include <iostream>
#include <cmath>
using namespace std;
int main()
{
	float p = -1, pmax = -1;
	int i, K, N, M, c = 0, j, c1=0, s = 0, m=1;
	cin >> N>>M;
	cin>>K;
	int *A[N];
	for	(i=0; i<M; i++) A[i] = new int[N];
	cout << "Vvedite elementy matricy: ";
	for (i = 0; i < M; i++){
		for (j = 0; j < N; j++)
			cin >> A[i][j];
	}
	for (j=0; j<N; j++){
		s+=A[K-1][j];
		m*=A[K-1][j];
	}
cout<<s<<endl<<m;
}

