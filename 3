#include <iostream>
#include <cmath>
using namespace std;
int main()
{
	float p = -1, pmax = -1;
	int i, K, N, M, min, c = 0, j, c1=0, s = 0, m=1;
	cin >> N>>M;
	int *A[N];
	for	(i=0; i<M; i++) A[i] = new int[N];
	cout << "Vvedite elementy matricy: ";
	for (i = 0; i < M; i++){
		for (j = 0; j < N; j++)
			cin >> A[i][j];
	}
	
	for (i=0; i<M; i++){
		m=1;
	for (j = 0; j < N; j++){
		 m*=A[j][i];
	}
	if (j==0) min=m;
	else if (m<min) {
	min=m;
	c1=i;
}}
cout<<min<<endl<<c1+1;
}

